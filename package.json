{
  "name": "meeting-video-to-text-extension",
  "version": "1.0.0",
  "description": "TypeScript Chrome extension that captures audio from meeting video streams and converts it to real-time text",
  "main": "dist/background/background.js",
  "scripts": {
    "build": "webpack --config build/webpack.config.js --mode=production",
    "dev": "webpack --config build/webpack.config.js --mode=development --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "package": "npm run build && node build/package-extension.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "chrome-extension",
    "typescript",
    "speech-recognition",
    "meeting",
    "transcription"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {}
}
